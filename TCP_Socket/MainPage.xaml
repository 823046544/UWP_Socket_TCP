<Page
    x:Class="TCP_Socket.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TCP_Socket"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="0,0,-620,-241">

        <Image Width="100" Height="100" x:Name="ShowImage" Margin="157,159,1003,342" Source="Assets/1.png" RenderTransformOrigin="1.25,1.297" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button x:Name="button6" Content="convert" Margin="163,85,0,0" Click="button6_Click" RenderTransformOrigin="1.386,-1.073" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
        
        <TextBox x:Name="_input" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="158" Margin="327,159,0,0" RenderTransformOrigin="0.96,4.6"/>
    
            <TextBlock Text="{x:Bind Path=Rec.message, Mode=OneWay }" x:Name="words" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="3505" Width="347" Margin="327,227,0,0" RenderTransformOrigin="0.455,0.484"/>
      
        <Button x:Name="Server" Content="Server" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="Create_Server" Margin="157,360,0,0"/>
        <Button x:Name="button2" Content="Connect" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="Button2_Click" Margin="157,400,0,0" RenderTransformOrigin="0.815,3.458"/>
        <Button x:Name="Server_Send" Content="Server_Send" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="ServerPort_Send" Margin="532,159,0,0" RenderTransformOrigin="0.815,3.458"/>
        <Button x:Name="Client_Connet" Content="Client_Connet" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="ClientPort_Connet" Margin="157,437,0,0" RenderTransformOrigin="0.815,3.458"/>
        <Button x:Name="button5" Content="Send2" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="button5_Click" Margin="638,159,0,0" RenderTransformOrigin="0.815,3.458"/>


        <TextBox x:Name="Username_B" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="158" Margin="758,122,0,0" RenderTransformOrigin="0.96,4.6"/>
        <TextBox x:Name="Password_B" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="158" Margin="758,159,0,0" RenderTransformOrigin="0.96,4.6"/>
        <TextBox x:Name="Nickname_B" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="30" Width="158" Margin="758,196,0,0" RenderTransformOrigin="0.96,4.6"/>
        <Button x:Name="button7" Content="Singup" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="Signup_Click" Margin="793,279,0,0" RenderTransformOrigin="0.815,3.458"/>
        <Button x:Name="button8" Content="Singin" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="Signin_Click" Margin="793,316,0,0" RenderTransformOrigin="0.815,3.458"/>

        <Button x:Name="Room1" Content="Room1" HorizontalAlignment="Left"  VerticalAlignment="Top" Click="Enter_Room1" Margin="793,378,0,0" RenderTransformOrigin="0.815,3.458"/>


    </Grid>
</Page>
